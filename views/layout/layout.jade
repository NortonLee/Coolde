                        ul(class='main-navigation')
                            li
                                <a href='/blog'>博文</a>
                            li
                                <a href='/life'>杂感</a>
                            li
                                <a href='/music'>音乐</a>
                            li
                                <a href='/movie'>电影</a>
                            li
                                <a href='/about'>关于</a>
                          
                          section(class='aboutme')
                            <p>Norton Li</p>
